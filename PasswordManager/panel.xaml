<Window x:Class="PasswordManager.panel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        mc:Ignorable="d"
        Title="panel" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid Margin="0,0,-0.4,45">
        <Label x:Name="lbl_username" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Height="42" Width="474" Margin="10,10,0,0" FontSize="24"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="0,112,0,-42" Width="784" HorizontalScrollBarVisibility="Visible"  
VerticalScrollBarVisibility="Visible">
            
        </DataGrid>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="55" Margin="0,57,0,0" Stroke="Black" VerticalAlignment="Top" Width="784"/>
        <Button x:Name="btn_add_entry" Content="Add Entry" HorizontalAlignment="Left" Margin="19,76,0,0" VerticalAlignment="Top" Width="75" Click="Btn_add_entry_Click"/>
        <Button x:Name="btn_gen_pass" Content="Generate Password" HorizontalAlignment="Left" Margin="138,76,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btn_refresh" Content="Refresh" HorizontalAlignment="Left" Margin="300,76,0,0" VerticalAlignment="Top" Width="75" Click="Btn_refresh_Click"/>

    </Grid>
</Window>
