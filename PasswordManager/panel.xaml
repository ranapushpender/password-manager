<Window x:Class="PasswordManager.panel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        mc:Ignorable="d"
        Title="panel" Height="603.6" Width="1131.2"
        Loaded="Window_Loaded">
    
    <Grid Margin="0,0,21.6,45.2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="773*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lbl_username" Content="Label" HorizontalAlignment="Left" VerticalAlignment="Top" Height="42" Width="474" Margin="10,10,0,0" FontSize="24"/>
        <DataGrid x:Name="dataGrid" IsReadOnly="true" SelectionMode="Single" SelectionUnit="Cell" AutoGenerateColumns="False" Margin="0,112,-23.8,0" HorizontalScrollBarVisibility="Visible"  VerticalScrollBarVisibility="Visible" Grid.ColumnSpan="2">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Copy Value" Click="MenuItem_Click" />
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn  Width="30" Header="ID" Binding="{Binding Id}"/>
                <DataGridTextColumn Width="200" Header="TITLE" Binding="{Binding Title}"/>
                <DataGridHyperlinkColumn Width="200" Header="URL" Binding="{Binding Url}"/>
                <DataGridTextColumn Width="200" Header="USERNAME" Binding="{Binding Username}"/>
                <DataGridTextColumn Width="200" Header="PASSWORD" Binding="{Binding Password}"/>
                <DataGridTemplateColumn Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Margin="10px" Click="Button_Click">Hide/Show</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Margin="10px" Click="Button_Click_1" >DELETE</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Margin="10px" Click="Button_Click_3" >UPDATE</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Width="30">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Margin="10px" Click="Button_Click_4">X</Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Rectangle Fill="#FFF4F4F5" Height="55" Margin="0,57,-23.8,0" Stroke="Black" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button x:Name="btn_add_entry" Content="Add Entry" HorizontalAlignment="Left" Margin="19,76,0,0" VerticalAlignment="Top" Width="75" Click="Btn_add_entry_Click"/>
        <Button x:Name="btn_gen_pass" Content="Change Password" HorizontalAlignment="Left" Margin="138,76,0,0" VerticalAlignment="Top" Width="120" Click="Btn_gen_pass_Click"/>
        <Button x:Name="btn_refresh" Content="Refresh" HorizontalAlignment="Left" Margin="300,76,0,0" VerticalAlignment="Top" Width="75" Click="Btn_refresh_Click"/>
        <Button x:Name="button" Content="Lock" HorizontalAlignment="Left" Height="19" Margin="1027,76,0,0" VerticalAlignment="Top" Width="66" Click="Button_Click_2" Grid.ColumnSpan="2"/>
        <Label x:Name="label" Content="Right Click on a Cell to Copy" HorizontalAlignment="Left" Height="37" Margin="10,530,0,-37" VerticalAlignment="Top" Width="422" FontSize="14"/>

    </Grid>
</Window>
